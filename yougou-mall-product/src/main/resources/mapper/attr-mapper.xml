<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="per.ccm.ygmall.product.mapper.AttrMapper">
    <resultMap id="attrVOMap" type="per.ccm.ygmall.product.vo.AttrVO">
        <id column="attr_id" property="attrId" jdbcType="BIGINT" />
        <result column="spu_id" property="spuId" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <collection property="attrValueList" ofType="per.ccm.ygmall.product.vo.AttrValueVO" fetchType="eager">
            <id column="attr_value_id" property="attrValueId" jdbcType="BIGINT" />
            <result column="attr_id" property="attrId" jdbcType="BIGINT" />
            <result column="attr_value_name" property="name" jdbcType="VARCHAR" />
        </collection>
    </resultMap>

    <sql id="attr_vo_column">
        attr.`attr_id`,
        attr.`spu_id`,
        attr.`name`,
        attr_value.`attr_value_id`,
        attr_value.`attr_id`,
        attr_value.`name` AS `attr_value_name`
    </sql>

    <sql id="attr_left_join_attr_value">
        FROM attr LEFT JOIN attr_value ON attr.`attr_id` = attr_value.`attr_id`
    </sql>

    <select id="selectAttrList" resultMap="attrVOMap">
        SELECT <include refid="attr_vo_column" /> <include refid="attr_left_join_attr_value" /> WHERE attr.`spu_id` = #{spuId}
    </select>
</mapper>