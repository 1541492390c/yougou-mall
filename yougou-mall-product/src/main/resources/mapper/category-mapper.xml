<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="per.ccm.ygmall.product.mapper.CategoryMapper">
    <sql id="category_vo_column">
        `category_id`, `parent_id`, `level`, `name`
    </sql>

    <select id="selectCategoryList" resultType="per.ccm.ygmall.product.vo.CategoryVO">
        SELECT <include refid="category_vo_column" /> FROM category
    </select>

    <select id="selectCategoryPages" resultType="per.ccm.ygmall.product.vo.CategoryVO">
        SELECT <include refid="category_vo_column" /> FROM category
        <where>
            <if test="parentId != null">`parent_id` = #{parentId}</if>
        </where>
    </select>
</mapper>